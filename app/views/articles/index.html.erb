<h1>Listing articles</h1>

<!-- This link will allow you to bring up the form that lets you create a new article. -->
<%= link_to 'New article', new_article_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>	
	</tr>

	<% @articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
	</tr>
	<% end %>
</table>